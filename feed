    <link type="text/html" rel="alternate" href="http://www.batsov.com/%25e6%2588%2591%25e7%259a%2584firefox%25e6%2589%25a9%25e5%25b1%2595%25e6%258f%2592%25e4%25bb%25b6%25e5%2588%2597%25e8%25a1%25a8.html"/>
