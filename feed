    <id>http://www.batsov.com/%e5%87%a0%e4%b8%aa%e6%8f%92%e4%bb%b6%e9%85%8d%e5%90%88%ef%bc%8cfirefox%e5%ae%8c%e7%be%8e%e4%b9%a6%e7%ad%be%e8%a7%a3%e5%86%b3%e6%96%b9%e6%a1%88</id>
