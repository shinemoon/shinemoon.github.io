    <id>http://www.batsov.com/%e7%ba%af%e5%87%80%e7%9a%84%e6%97%b6%e5%85%89%e2%80%94%e2%80%94%e3%80%8a%e6%97%b6%e5%85%89%e5%80%92%e6%b5%81%e4%b8%83%e5%8d%81%e5%b9%b4%e3%80%8b%e5%8e%9f</id>
